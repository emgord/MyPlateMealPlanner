<fieldset>
  <%= form_for ingredient, url:{ action: action} do |f| %>
  <legend>  <%= title %> </legend>
    <%= f.label :ingredient_name %>
    <%= f.text_field :ingredient_name %>
    <%= f.label :food_group %>
    <%= f.select(:food_group, Ingredient::FOODGROUPS, {include_blank: true}) %>
    <%= f.label :shopping_list, :value => "Add to Shopping List" %>
    <%= f.check_box :shopping_list %>
    <%= f.hidden_field :meal_id, value: meal_id %>
    <%= f.submit %>

  <% end %>

</fieldset>
